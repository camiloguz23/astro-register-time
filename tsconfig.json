{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@layout/*": ["./src/layout/*"],
      "@React/": ["./src/components/react/index.ts"],
      "@shared/*": ["./src/shared/*"],
      "@db/*": ["./src/database/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
